{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../src",
  "testRegex": "^(?!.*integration\\.spec\\.ts$).*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!**/*.integration.spec.ts",
    "!**/*.resolver.ts",
    "!**/*.repository.ts",
    "!**/*.module.ts",
    "!**/*.entity.ts",
    "!main.ts",
    "!app.module.ts",
    "!common/tracing/instrumentation.ts",
    "!prisma/prisma.module.ts",
    "!user/password/password.module.ts",
    "!user/profile/profile-settings.entity.ts",
    "!test/**"
  ],
  "testEnvironment": "node",
  "coverageReporters": ["text"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1"
  }
}
