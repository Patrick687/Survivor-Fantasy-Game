{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testRegex": "test/unit/.*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.spec.ts",
    "!src/**/*.e2e-spec.ts",
    "!src/**/*.module.ts",
    "!src/**/*.resolver.ts",
    "!src/**/*.domain.ts",
    "!src/**/*.entity.ts",
    "!src/**/seedData/**",
    "!src/main.ts",
    "!src/prisma/prisma.service.ts",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage/unit",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/test/unit-setup.ts"]
}
